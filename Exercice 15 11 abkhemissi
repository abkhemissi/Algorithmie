*/


Classe Point (x,y)

debut

	fonction getX()
	debut
		retourner x
	fin

	fonction setX(x)
	debut
		Affecter à x : x
	fin

	fonction getY()
	debut
		retourner y
	fin

	fonction setY(y)
	debut
		Affecter à y : y
	fin

	fonction toString()
	debut
		retourner "Point (" + x + "," + y + ")"
	fin

fin


programme TestPoint

point: Point(1,2)

debut
	Afficher point.getX()
	point.setX(0)
	Afficher point.gety()
	point.setY(1)

fin


